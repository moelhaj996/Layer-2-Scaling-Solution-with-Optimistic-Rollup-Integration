# Multi-stage build for Next.js frontend
FROM node:22-alpine AS deps
WORKDIR /app
COPY package*.json ./
RUN npm ci

FROM node:22-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Build arguments for environment variables
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_WS_URL
ARG NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID
ARG NEXT_PUBLIC_L1_BRIDGE_ADDRESS
ARG NEXT_PUBLIC_L2_BRIDGE_ADDRESS
ARG NEXT_PUBLIC_L1_TOKEN_ADDRESS
ARG NEXT_PUBLIC_L2_TOKEN_ADDRESS

ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_WS_URL=$NEXT_PUBLIC_WS_URL
ENV NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=$NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID
ENV NEXT_PUBLIC_L1_BRIDGE_ADDRESS=$NEXT_PUBLIC_L1_BRIDGE_ADDRESS
ENV NEXT_PUBLIC_L2_BRIDGE_ADDRESS=$NEXT_PUBLIC_L2_BRIDGE_ADDRESS
ENV NEXT_PUBLIC_L1_TOKEN_ADDRESS=$NEXT_PUBLIC_L1_TOKEN_ADDRESS
ENV NEXT_PUBLIC_L2_TOKEN_ADDRESS=$NEXT_PUBLIC_L2_TOKEN_ADDRESS

RUN npm run build

FROM node:22-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

USER nextjs

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["node", "server.js"]
